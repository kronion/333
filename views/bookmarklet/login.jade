doctype html
html(lang='en')
  head
    include base_head
  body
    div.pure-g-r
      div.pure-u-1-1.banner
        div.pure-u-3-4.banner-inner
          h1
            a(href='/')=title
      div.pure-u-1-2.content
        div.bounding-box.rounded
          div.padded
            h3 Please log in first!
            hr
            div.pure-g-r
              div.pure-u-11-24.relative
                div.error.rounded
                  div.padded
                    if flash.length > 0
                      each error in flash
                        h4=error.title
                        for part in error.parts
                          p=part
                    else
                      h4 An error occurred
                      asd
                      p Sorry! It looks like we messed up. Unfortunately, that's all we know.
                      p We'll dispatch the nerds right away.
              div.pure-u-1-12
              div.pure-u-11-24
                div.button-align
                  form
                  	input.pure-button.button-primary.left(onClick='window.open("login")' value='Log in')
                  p or
                  form
                    input.pure-button.button-primary.right(onClick='window.open("login")' value='Sign up here')
    include scripts
